import SwiftUI

struct BuyView: View {
    @EnvironmentObject var walletManager: WalletManager
    @EnvironmentObject var settingsManager: SettingsManager
    @Environment(\.dismiss) private var dismiss
    @State private var selectedToken: Token?
    @State private var showProviderSelection = false
    @State private var showP2PTrading = false
    
    private var popularTokens: [Token] {
        walletManager.tokens.filter { token in
            ["BTC", "ETH", "USDT", "USDC", "BNB", "MATIC"].contains(token.symbol)
        }
    }
    
    // Helper to get wallet address for a token
    private func getAddress(for token: Token) -> String {
        return walletManager.depositAddress(for: token)
    }
    
    var body: some View {
        NavigationView {
            ZStack {
                LinearGradient(
                    gradient: Gradient(colors: [
                        WpayinColors.backgroundGradientStart,
                        WpayinColors.backgroundGradientEnd
                    ]),
                    startPoint: .top,
                    endPoint: .bottom
                )
                .ignoresSafeArea()
                
                ScrollView {
                    VStack(spacing: 32) {
                        // Header
                        VStack(spacing: 12) {
                            Image(systemName: "creditcard.circle.fill")
                                .font(.system(size: 60))
                                .foregroundColor(WpayinColors.primary)
                            
                            Text("Buy Crypto")
                                .font(.system(size: 28, weight: .bold))
                                .foregroundColor(WpayinColors.text)
                            
                            Text("Purchase cryptocurrency instantly")
                                .font(.system(size: 16))
                                .foregroundColor(WpayinColors.textSecondary)
                                .multilineTextAlignment(.center)
                        }
                        .padding(.top, 20)
                        
                        // Quick Buy - Popular Tokens
                        VStack(alignment: .leading, spacing: 16) {
                            Text("Quick Buy")
                                .font(.wpayinHeadline)
                                .foregroundColor(WpayinColors.text)
                                .padding(.horizontal)
                            
                            if popularTokens.isEmpty {
                                EmptyQuickBuyView()
                            } else {
                                VStack(spacing: 12) {
                                    ForEach(popularTokens) { token in
                                        QuickBuyCard(token: token) {
                                            print("ðŸ‘† Tapped Buy on \(token.symbol)")
                                            selectedToken = token
                                            showProviderSelection = true
                                        }
                                    }
                                }
                                .padding(.horizontal)
                            }
                        }
                        .onAppear {
                            print("ðŸ“Š Total tokens in wallet: \(walletManager.tokens.count)")
                            print("â­ Popular tokens: \(popularTokens.count)")
                            for token in popularTokens {
                                let addr = getAddress(for: token)
                                print("  - \(token.symbol): \(addr.prefix(10))...")
                            }
                        }
                        
                        // Other Methods
                        VStack(alignment: .leading, spacing: 16) {
                            Text("Other Methods")
                                .font(.wpayinHeadline)
                                .foregroundColor(WpayinColors.text)
                                .padding(.horizontal)
                            
                            BuyMethodCard(
                                icon: "arrow.left.arrow.right.circle.fill",
                                title: "P2P Trading",
                                subtitle: "Buy directly from other users",
                                badge: "Best Rates",
                                badgeColor: .orange,
                                action: {
                                    showP2PTrading = true
                                }
                            )
                            .padding(.horizontal)
                        }
                        
                        // Info Section
                        BuyInfoSection()
                            .padding(.horizontal)
                        
                        Spacer(minLength: 40)
                    }
                }
            }
            .navigationBarTitleDisplayMode(.inline)
            .toolbar {
                ToolbarItem(placement: .navigationBarLeading) {
                    Button("Close") {
                        dismiss()
                    }
                    .foregroundColor(WpayinColors.text)
                }
            }
        }
        .sheet(isPresented: $showProviderSelection) {
            if let token = selectedToken {
                let address = getAddress(for: token)
                ProviderSelectionView(
                    crypto: token.symbol,
                    walletAddress: address
                )
                .onAppear {
                    print("ðŸ” Opening provider selection for \(token.symbol)")
                    print("ðŸ“ Using address: \(address)")
                }
            }
        }
        .sheet(isPresented: $showP2PTrading) {
            P2PBuyView()
                .environmentObject(walletManager)
                .environmentObject(settingsManager)
        }
    }
}

// MARK: - Supporting Views

struct QuickBuyCard: View {
    let token: Token
    let action: () -> Void
    
    var body: some View {
        Button(action: action) {
            HStack(spacing: 16) {
                TokenIconView(token: token, size: 44, showNetworkBadge: false)
                
                VStack(alignment: .leading, spacing: 4) {
                    Text(token.symbol)
                        .font(.wpayinSubheadline)
                        .foregroundColor(WpayinColors.text)
                    
                    Text(token.name)
                        .font(.wpayinCaption)
                        .foregroundColor(WpayinColors.textSecondary)
                }
                
                Spacer()
                
                HStack(spacing: 6) {
                    Image(systemName: "plus.circle.fill")
                        .font(.system(size: 16))
                    Text("Buy")
                        .font(.system(size: 14, weight: .semibold))
                }
                .foregroundColor(.white)
                .padding(.horizontal, 16)
                .padding(.vertical, 8)
                .background(WpayinColors.primary)
                .cornerRadius(20)
            }
            .padding()
            .background(WpayinColors.surface)
            .cornerRadius(12)
        }
        .buttonStyle(PlainButtonStyle())
    }
}

