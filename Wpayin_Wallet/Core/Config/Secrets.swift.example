import Foundation

/// API Keys and Secrets Configuration
/// 
/// HOW TO USE:
/// 1. Copy this file to Secrets.swift (in the same directory)
/// 2. Replace all YOUR_*_API_KEY with your actual API keys
/// 3. Make sure Secrets.swift is in .gitignore (it should be!)
/// 4. Never commit Secrets.swift to git
///
/// WHERE TO GET API KEYS:
/// - Etherscan: https://etherscan.io/apis
/// - BscScan: https://bscscan.com/apis
/// - PolygonScan: https://polygonscan.com/apis
/// - Arbiscan: https://arbiscan.io/apis
/// - Optimism: https://optimistic.etherscan.io/apis
/// - Snowtrace: https://snowtrace.io/apis
/// - Basescan: https://basescan.org/apis
/// - Alchemy: https://www.alchemy.com/
/// - CoinGecko: https://www.coingecko.com/en/api

struct Secrets {
    
    // MARK: - Blockchain Explorer API Keys
    
    /// Etherscan API Key (Ethereum Mainnet)
    static let etherscanApiKey = "YOUR_ETHERSCAN_API_KEY"
    
    /// BscScan API Key (Binance Smart Chain)
    static let bscscanApiKey = "YOUR_BSCSCAN_API_KEY"
    
    /// PolygonScan API Key
    static let polygonscanApiKey = "YOUR_POLYGONSCAN_API_KEY"
    
    /// Arbiscan API Key (Arbitrum)
    static let arbiscanApiKey = "YOUR_ARBISCAN_API_KEY"
    
    /// Optimism Etherscan API Key
    static let optimismscanApiKey = "YOUR_OPTIMISM_API_KEY"
    
    /// Snowtrace API Key (Avalanche)
    static let snowtraceApiKey = "YOUR_SNOWTRACE_API_KEY"
    
    /// Basescan API Key
    static let basescanApiKey = "YOUR_BASESCAN_API_KEY"
    
    // MARK: - Third-Party Services
    
    /// Alchemy API Key for NFT and enhanced blockchain queries
    static let alchemyApiKey = "YOUR_ALCHEMY_API_KEY"
    
    /// CoinGecko API Key (optional - free tier works without)
    static let coinGeckoApiKey: String? = nil
    
    // MARK: - RPC Endpoints (Optional - using public by default)
    
    /// Custom Ethereum RPC endpoint (optional)
    /// Leave nil to use default public endpoint
    static let ethereumRpcUrl: String? = nil
    // Example: "https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY"
    
    /// Custom Bitcoin RPC endpoint (optional)
    static let bitcoinRpcUrl: String? = nil
    
    /// Custom BSC RPC endpoint (optional)
    static let bscRpcUrl: String? = nil
    
    /// Custom Polygon RPC endpoint (optional)
    static let polygonRpcUrl: String? = nil
    
    /// Custom Arbitrum RPC endpoint (optional)
    static let arbitrumRpcUrl: String? = nil
    
    /// Custom Optimism RPC endpoint (optional)
    static let optimismRpcUrl: String? = nil
    
    /// Custom Avalanche RPC endpoint (optional)
    static let avalancheRpcUrl: String? = nil
    
    /// Custom Base RPC endpoint (optional)
    static let baseRpcUrl: String? = nil
    
    // MARK: - Validation
    
    /// Check if required API keys are configured
    static var isConfigured: Bool {
        return !etherscanApiKey.contains("YOUR_") &&
               !alchemyApiKey.contains("YOUR_")
    }
    
    /// Get list of missing API keys
    static var missingKeys: [String] {
        var missing: [String] = []
        
        if etherscanApiKey.contains("YOUR_") {
            missing.append("Etherscan")
        }
        if bscscanApiKey.contains("YOUR_") {
            missing.append("BscScan")
        }
        if polygonscanApiKey.contains("YOUR_") {
            missing.append("PolygonScan")
        }
        if arbiscanApiKey.contains("YOUR_") {
            missing.append("Arbiscan")
        }
        if optimismscanApiKey.contains("YOUR_") {
            missing.append("Optimism")
        }
        if snowtraceApiKey.contains("YOUR_") {
            missing.append("Snowtrace")
        }
        if basescanApiKey.contains("YOUR_") {
            missing.append("Basescan")
        }
        if alchemyApiKey.contains("YOUR_") {
            missing.append("Alchemy")
        }
        
        return missing
    }
    
    /// Get configuration status message
    static var configurationMessage: String {
        if isConfigured {
            return "✅ All required API keys configured"
        } else {
            return "⚠️ Missing API keys: \(missingKeys.joined(separator: ", "))"
        }
    }
}
